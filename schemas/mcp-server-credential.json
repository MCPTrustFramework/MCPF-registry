{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcpf.dev/schemas/mcp-server-credential.json",
  "title": "MCP Server Credential",
  "description": "Verifiable credential for MCP server registration",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "contains": {
        "const": "https://www.w3.org/2018/credentials/v1"
      }
    },
    "type": {
      "type": "array",
      "contains": {
        "const": "MCPServerCredential"
      }
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^did:"
        },
        "serverId": {
          "type": "string"
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "endpoint": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["id", "capabilities", "endpoint"]
    }
  },
  "required": ["@context", "type", "credentialSubject"]
}
